#            INDEX
# ------------------------------
@app.route("/")
@login_required
def index():
    """Show portfolio of stocks"""

    user_id = session.get("user_id")

    # Get cash for user
    user = db.execute("SELECT cash FROM users WHERE id = ?", user_id)
    if not user:
        return apology("user not found")
    cash = user[0]["cash"]

    # Get holdings (group by symbol, sum shares), only keep positive shares
    holdings = db.execute(
        "SELECT symbol, SUM(shares) AS shares FROM transactions WHERE user_id = ? GROUP BY symbol HAVING SUM(shares) > 0",
        user_id
    )

    portfolio = []
    stocks_total = 0.0

    for h in holdings:
        symbol = h["symbol"]
        shares = int(h["shares"])

        quote = lookup(symbol)
        # If lookup fails, set price to 0 and continue (or you could apology)
        if quote is None:
            price = 0.0
            name = symbol
        else:
            price = quote["price"]
            name = quote.get("name", symbol)

        total = shares * price
        stocks_total += total

        portfolio.append({
            "symbol": symbol,
            "name": name,
            "shares": shares,
            "price": price,
            "total": total
        })

    grand_total = cash + stocks_total

    return render_template("index.html", portfolio=portfolio, cash=cash, grand_total=grand_total)


